@model IList<PollModel>



@if (Model.Count > 0)
{
    <div class="itembox">
        <h2>@T("Polls.Title")</h2>
        <p>
            <label>
                <input type="radio" class="select_option">
                Iphone 6
            </label>
        </p>
        <p>
            <label>
                <input type="radio" class="select_option">
                Iphone 5
            </label>
        </p>
        <p>
            <label>
                <input type="radio" class="select_option">
                Iphone 4
            </label>
        </p>
        <p>
            <a href="#" class="btn01">Bình chọn</a> <a href="#">Xem kết quả</a>
        </p>
    </div>


    <div class="home-page-polls">
        <div class="title">
            <strong>@T("Polls.Title")</strong>
        </div>
        @foreach (var poll in Model)
        {
            @Html.Partial("_Poll", poll)
        }
    </div>
}