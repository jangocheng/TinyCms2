@{

    //current category ID
    var currentCategoryId = 0;
    if (Url.RequestContext.RouteData.Values["controller"].ToString().Equals("posts", StringComparison.InvariantCultureIgnoreCase) &&
        Url.RequestContext.RouteData.Values["action"].ToString().Equals("category", StringComparison.InvariantCultureIgnoreCase))
    {
        currentCategoryId = Convert.ToInt32(Url.RequestContext.RouteData.Values["categoryId"].ToString());
    }
    //current post ID
    var currentPostId = 0;
    if (Url.RequestContext.RouteData.Values["controller"].ToString().Equals("posts", StringComparison.InvariantCultureIgnoreCase) &&
        Url.RequestContext.RouteData.Values["action"].ToString().Equals("postdetails", StringComparison.InvariantCultureIgnoreCase))
    {
        currentPostId = Convert.ToInt32(Url.RequestContext.RouteData.Values["postId"].ToString());
    }
}

<div class="header sub">
    <div class="menu_ctn">
        <div class="infobar clearfix">
            <a href="@Url.RouteUrl("homepage")" class="logo"></a>
            @Html.Action("CategoryNavigation", "Posts", new {currentCategoryId, currentPostId})
            <div class="myinfo subnav">
                @Html.Action("UserInfoZone", "Customer")
            </div>
            <div class="menuloc subnav">
                <span class="navcate icn"></span>
                <div class="sub_info">
                    <span class="toparr icn"></span>
                    @Html.Action("TopMenu", "Posts")
                </div>
            </div>
        </div>
    </div>
</div>