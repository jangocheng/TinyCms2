@model UserInfoZoneModel

@if (Model.IsAuthenticated)
{
    <img src="@Model.AvatarUrl" alt="" class="avt"><span class="botarr icn"></span>
    <div class="sub_info">
        <span class="toparr icn"></span>
        <ul>
            <li><a href="@Url.RouteUrl("CustomerSummary")">Trang cá nhân</a></li>
            <li><a href="@Url.RouteUrl("CustomerChangePassword")">Đổi mật khẩu</a></li>
            <li><a href="@Url.RouteUrl("Logout")">Thoát</a></li>
        </ul>
    </div>
}
else
{
    <a href="@Url.Action("Login", "Customer")"><img src="@Model.AvatarUrl" alt="" class="avt"></a>
    <script type="text/javascript">
        $(".header:not('.mobile') .myinfo a").click(function (e) {
            e.preventDefault();
            showPopup('@Url.Action("Login", "Customer", new {popup = true})', 'Đăng nhập'); 
        });
    </script>
}