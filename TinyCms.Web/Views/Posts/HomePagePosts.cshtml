@model IEnumerable<PostOverviewModel>
@{
    var posts = Model.ToList();
}
@if (posts.Count > 0)
{
    var firstPost = posts.First();
    <div class="listnews">
        <div class="toplist">
            <a href="@Url.RouteUrl("Post", new {SeName = firstPost.SeName})">
                <span class="loading"><img src="@firstPost.DefaultPictureModel.ImageUrl" width="170" height="107" alt="@firstPost.DefaultPictureModel.AlternateText" /></span>
                <span> @firstPost.Name</span>
            </a>
        </div>
        @if (posts.Count > 1)
        {
            <ul>
                @foreach (var post in posts.Skip(1))
                {
                    <li>
                        <a href="@Url.RouteUrl("Post", new {SeName = post.SeName})">
                            @post.Name
                        </a>
                    </li>
                }
            </ul>
        }
    </div>
    <script type="text/javascript">
        var niceScroll;
        $(document).ready(function () {
            enableNiceScroll();
        });
        function enableNiceScroll() {
            if (niceScroll && $(window).width() <= 400) {
                niceScroll.remove();
                niceScroll = null;
            }
            if (!niceScroll && $(window).width() > 400) {
                niceScroll = $(".listnews").niceScroll({ cursorcolor: "#aaa" });
            }
        }
        $(window).resize(function () {
            enableNiceScroll();
        });
    </script>
}