@using TinyCms.Core.Domain.Posts
@using TinyCms.Core.Infrastructure
@model CategoryBoxModel
           @{
               var videoPostTemplateId = EngineContext.Current.Resolve<CatalogSettings>().VideoPostTemplateId;
           }
@if (Model.Posts.Any())
{
    <div class="multibox">
        <h1><a href="@Url.RouteUrl("Category", new {Model.SeName})">Ảnh & Video</a></h1>
        <ul class="clearfix">
            @foreach (var post in Model.Posts)
            {
                <li>
                    <a href="@Url.RouteUrl("Post", new {SeName = post.SeName})">
                        <span class="loading"><img src="@post.DefaultPictureModel.ImageUrl" alt="@post.DefaultPictureModel.AlternateText" /></span>
                        <h2>@post.Name</h2>
                        @if (post.PostTemplateId == videoPostTemplateId)
                        {
                            <span class="playicn icn"></span>
                        }
                    </a>
                </li>
            }
        </ul>
    </div>
}
