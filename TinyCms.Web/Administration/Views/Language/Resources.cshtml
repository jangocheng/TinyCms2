        $
            ("#resources-grid").kendoGrid(
            {
                {
                    "json",
                    {
                        {
                            "@Html.Raw(Url.Action("
                            Resources
                            ", "
                            Language
                            ", new { languageId = ViewBag.LanguageId }))",
