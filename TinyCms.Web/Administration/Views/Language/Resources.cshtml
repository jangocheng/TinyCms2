                            ResourceAdd
                            ", "
                            Language
                            ", new { languageId = ViewBag.LanguageId }))",
                            "POST",
                            "json",
                            addAntiForgeryToken
                        }
                    ,
                        {
                            "@Html.Raw(Url.Action("
                            ResourceUpdate
                            ", "
                            Language
                            "))",
                            "POST",
                            "json",
                            addAntiForgeryToken
                        }
                    ,
                        {
                            "@Html.Raw(Url.Action("
                            ResourceDelete
                            ", "
                            Language
                            "))",
                            "POST",
                            "json",
                            addAntiForgeryToken
                        }
                    ,
                        function(data, operation)
                        {
                            if (operation != "read")
                            {
                                return data;
                            }
                            //for some reasons only such "Filter" data be parsed
                            return JSON.stringify(data);
                        }
                    }
                ,
                    {
                        "Data",
                        "Total",
                        "Errors",
                        {
                            "Id",
                            {
                                {
                                    true,
                                    "string"
                                }
