                                }
                            ,
                                {
                                    false,
                                    "number"
                                }
                            }
                        }
                    }
                ,
                    function(e)
                    {
                        if (e.type == "create" || e.type == "update")
                        {
                            this.read();
                        }
                    }
                ,
                    function(e)
                    {
                        display_kendoui_grid_error(e);
                        // Cancel the changes
                        this.cancelChanges();
                    }
                ,
                    (defaultGridPageSize),
                    true,
                    true,
                    true
                }
            ,
