@model PostModel


@if (Model.Id > 0)
{
    <table class="adminContent">
    <tr>
        <td>
            <div id="relatedposts-grid"></div>

            <script>
                $(document).ready(function() {
                    $("#relatedposts-grid").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "@Html.Raw(Url.Action("RelatedPostList", "Post", new {postId = Model.Id}))",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                },
                                update: {
                                    url: "@Html.Raw(Url.Action("RelatedPostUpdate", "Post"))",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                },
                                destroy: {
                                    url: "@Html.Raw(Url.Action("RelatedPostDelete", "Post"))",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors",
                                model: {
                                    id: "Id",
                                    fields: {
                                        Post2Name: { editable: false, type: "string" },
                                        DisplayOrder: { editable: true, type: "number" },
                                        PostId2: { editable: false, type: "number" }
                                    }
                                }
                            },
                            requestEnd: function(e) {
                                if (e.type == "update") {
                                    this.read();
                                }
                            },
                            error: function(e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        pageable: {
                            refresh: true,
                            numeric: false,
                            previousNext: false,
                            info: false
                        },
                        editable: {
                            confirmation: false,
                            mode: "inline"
                        },
                        scrollable: false,
                        columns: [
                        {
                            field: "Post2Name",
                            title: "@T("Admin.Catalog.Posts.RelatedPosts.Fields.Post")"
                        }, {
                            field: "DisplayOrder",
                            title: "@T("Admin.Catalog.Posts.RelatedPosts.Fields.DisplayOrder")",
                            //integer format
                            format: "{0:0}",
                            width: 150
                        }, {
                            field: "PostId2",
                            title: "@T("Admin.Common.View")",
                            width: 100,
                            template: "<a href=\"@Url.Content(\
                                                     "~/Admin/Post/Edit/\")#=PostId2#\">@T(\"Admin.Common.View\")</a>"
},
    {
        {
            "edit",
            {
                "@T("
                Admin.Common.Edit
                ")",
                "@T("
                Admin.Common.Update
                ")",
                "@T("
                Admin.Common.Cancel
                ")"
            }
        }
    ,
        {
            "destroy",
            "@T("
            Admin.Common.Delete
            ")"
        }
    ],
        200
    }
                                                     ]
}

    );
                    });
                    </script>
        </td>
    </tr>
