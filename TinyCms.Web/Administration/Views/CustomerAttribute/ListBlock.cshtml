<p>
    <h4>@T("Admin.Customers.CustomerAttributes")</h4>
</p>
<p>
    <em>@T("Admin.Customers.CustomerAttributes.Description")</em>
</p>
<div>
    <a href="@Url.Action("Create", "CustomerAttribute")" class="k-button">@T("Admin.Common.AddNew")</a>
</div>
<table class="adminContent">
    <tr>
        <td>
            <div id="customerattributes-grid"></div>
            <script>
                $(document).ready(function() {
                    $("#customerattributes-grid").kendoGrid({
                        dataSource: {
                            type: "json",
                            transport: {
                                read: {
                                    url: "@Html.Raw(Url.Action("List", "CustomerAttribute"))",
                                    type: "POST",
                                    dataType: "json",
                                    data: addAntiForgeryToken
                                }
                            },
                            schema: {
                                data: "Data",
                                total: "Total",
                                errors: "Errors"
                            },
                            error: function(e) {
                                display_kendoui_grid_error(e);
                                // Cancel the changes
                                this.cancelChanges();
                            },
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        pageable: {
                            refresh: true,
                            numeric: false,
                            previousNext: false,
                            info: false
                        },
                        editable: {
                            confirmation: false,
                            mode: "inline"
                        },
                        scrollable: false,
                        columns: [
                        {
                            field: "Name",
                            title: "@T("Admin.Customers.CustomerAttributes.Fields.Name")",
                            width: 300
                        }, {
                            field: "AttributeControlTypeName",
                            title: "@T("Admin.Customers.CustomerAttributes.Fields.AttributeControlType")",
                            width: 200
                        }, {
                            field: "IsRequired",
                            title: "@T("Admin.Customers.CustomerAttributes.Fields.IsRequired")",
                            width: 100,
                            headerAttributes: { style: "text-align:center" },
                            attributes: { style: "text-align:center" },
                            template: "<img src=\"@Url.Content(\
                                                      "~/Administration/Content/images/\")active-#=IsRequired#.gif\" />"
}

    ,
        {
            "DisplayOrder",
            "@T("
            Admin.Customers.CustomerAttributes.Fields.DisplayOrder
            ")",
            100
        }
    ,

{
    private field 
: "Id",
    private title 
: "@T("
    private Admin.Common.Edit 
")",
    private width 
: 100,
    private template 
: "<a href=\"@Url.Content(\"~/Admin/CustomerAttribute/Edit/\")#=Id#\">@T(\"Admin.Common.Edit\")</a>"
}
]
}
);
                    });
                    </script>
        </td>
    </tr>
</table>